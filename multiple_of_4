class array_constraint;
  rand int array[];
  
  constraint array_size_c {
    array.size() inside {[2:10]};
  }

  constraint array_4_multiple_c {
    foreach(array[i])
      array.sum() with (int'(item > 0 && item[i] % 4 == 0)) > 0;
  }

  constraint array_range_c {
    foreach(array[i]) array[i] inside {[0:17]};
  }
  
  constraint array_sum_c {
    array.sum()  == 17;
  }
    
endclass
