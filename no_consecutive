class array_constraint;
  rand int array[];
  
  constraint array_size_c {
  	array.size == 10;
  }
  
  constraint array_value_range_c {
    foreach(array[i]) array[i] inside {[0:4]};
  }
    
  constraint array_list_c {
    foreach(array[i])
      i > 0 && array[i] != 0 -> array[i] != array[i-1];
  }
